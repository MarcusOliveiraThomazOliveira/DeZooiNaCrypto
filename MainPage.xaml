<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DeZooiNaCrypto.MainPage"
             NavigationPage.HasBackButton="False"
             Title="De Zooi na Crypto"              
             xmlns:dxg="clr-namespace:DevExpress.Maui.DataGrid;assembly=DevExpress.Maui.DataGrid"
             xmlns:dxco="clr-namespace:DevExpress.Maui.Controls;assembly=DevExpress.Maui.Controls"
             xmlns:local="clr-namespace:DeZooiNaCrypto.Model.ViewModel">

    <ContentPage.ToolbarItems>
        <ToolbarItem x:Name="btnApresentarMenu" IconImageSource="verticaldots" Clicked="ApresentaMenu"/>
    </ContentPage.ToolbarItems>

    <Grid>
        <dxg:DataGridView ItemsSource="{Binding CryptoMoedas}">
            <dxg:DataGridView.Columns>
                <dxg:TextColumn Caption="Nome" FieldName="Nome" VerticalContentAlignment="Start"/>
                <dxg:NumberColumn Caption="Valor" FieldName="Valor" VerticalContentAlignment="End"/>
            </dxg:DataGridView.Columns>
        </dxg:DataGridView>

        <dxco:DXPopup x:Name="actionsPopup" PlacementTarget="{x:Reference btnApresentarMenu}">
            <StackLayout Padding="8,6">
                <dxco:SimpleButton Text="Cadastrar Crypto Moeda"/>
                <dxco:SimpleButton Text="Sair"/>
            </StackLayout>
        </dxco:DXPopup>
    </Grid>    

</ContentPage>
