<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="DeZooiNaCrypto.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:DeZooiNaCrypto.View"
    Shell.FlyoutBehavior="Flyout">

    <ShellContent
        Title="Principal"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <ShellContent
        Title="Extrato"
        ContentTemplate="{DataTemplate local:ListaExtrato}"
        Route="ListaExtrato" />

    <ShellContent
        Title="Perfil"
        ContentTemplate="{DataTemplate local:PerfilView}"
        Route="PerfilView" />

    <ShellContent
        Title="Sair"
        ContentTemplate="{DataTemplate local:LoginUsuario}"
        Route="LoginUsuario" />

</Shell>
