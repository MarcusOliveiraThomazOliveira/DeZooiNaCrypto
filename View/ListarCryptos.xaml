<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DeZooiNaCrypto.View.ListarCryptos"
             NavigationPage.HasNavigationBar="False">

    <VerticalStackLayout Spacing="10" Margin="5">

        <Grid x:Name="gridBotoes" ColumnDefinitions="*,*" ColumnSpacing="4">
            <Button
                Text="+ Crypto"
                x:Name="btnAddCrypto"
                Margin="16"
                Clicked="CadastrarCrypto"
         />
            <Button
                Grid.Column="1"
                Text="Sair"
                x:Name="btnSair"
                Margin="16"
                Clicked="Sair"
         />
        </Grid>
        <ListView 
            x:Name="lvCryptos"
            BackgroundColor="Transparent"
            SeparatorColor="Silver"
            RowHeight="50">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding Nome}">
                    </TextCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </VerticalStackLayout>
</ContentPage>