<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DeZooiNaCrypto.View.Lista.ListaCryptoMoeda"
             xmlns:dxg="clr-namespace:DevExpress.Maui.DataGrid;assembly=DevExpress.Maui.DataGrid"
             xmlns:local="clr-namespace:DeZooiNaCrypto.Model.ViewModel">
    
    <dxg:DataGridView ItemsSource="{Binding CryptoMoedas}">
        <dxg:DataGridView.Columns>
            <dxg:TextColumn Caption="Nome" FieldName="Nome" VerticalContentAlignment="Start"/>
            <dxg:NumberColumn Caption="Valor" FieldName="Valor" VerticalContentAlignment="End"/>
        </dxg:DataGridView.Columns>
    </dxg:DataGridView>
    
</ContentPage>