<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DeZooiNaCrypto.View.HistoricoCrypto"
             xmlns:local="clr-namespace:DeZooiNaCrypto.View"
             Title="Histórico Crypto">
    <StackLayout>
        <Label 
            Text="Vem coisa boa por aí.....segura a onda."
            TextColor="Blue"
            FontAttributes="Bold"
            TextDecorations="Underline"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Shell>
            <TabBar x:Name="tbHistorico">
                <Tab Title="Compra" >
                    <ShellContent ContentTemplate="{DataTemplate local:CompraCrypto}"/>
                </Tab>
                <Tab Title="Venda">
                    <ShellContent ContentTemplate="{DataTemplate local:VendaCrypto}"/>
                </Tab>
            </TabBar>
        </Shell>
    </StackLayout>
</ContentPage>